<div class='page-header'>
  <h1>
    <%= t('Userevent Info') %>
    <div class='pull-right'>
      <%= link_to edit_user_event_path(@user_event), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to user_events_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong><%=t("User")%></strong>
      <%= @user_event.user.name %>
    </p>
    <p>
      <strong><%=t("Event")%></strong>
      <%= @user_event.event.name %>
    </p>
  </div>
</div>
