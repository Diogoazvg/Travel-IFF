<div class='page-header'>
  <h1>
    <%= t('Event Info') %>
    <div class='pull-right'>
      <%= link_to edit_event_path(@event), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to events_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong>Name</strong>
      <%= @event.name %>
    </p>
    <p>
      <strong>Day</strong>
      <%= @event.day %>
    </p>
    <p>
      <strong>Description</strong>
      <%= @event.description %>
    </p>
  </div>
</div>
