<%= simple_form_for @travel, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
<div class="form-horizontal col-sm-offset-1 col-sm-7">
  <div class="panel panel-info">
  <div class="panel-heading "><%=t("Table_travel")%></div>
    <div class="panel-body">
      <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :day, input_html: { name: "daterange" }, as: :string %>
      </div>

      <div class="form-actions">
          <%= f.button :submit, class: "btn btn-info" %>
      </div>
    </div>  
  </div>
</div>     
<% end %>
