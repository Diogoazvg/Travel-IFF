<div class='page-header'>
  <h1>
    <%= t('User Info') %>
    <div class='pull-right'>
      <%= link_to edit_user_path(@user), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to users_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong>Admin</strong>
      <%= @user.admin %>
    </p>
    <p>
      <strong>Email</strong>
      <%= @user.email %>
    </p>
  </div>
</div>
