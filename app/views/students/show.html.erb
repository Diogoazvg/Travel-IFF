<div class='page-header'>
  <h1>
    <%= t('Student Info') %>
    <div class='pull-right'>
      <%= link_to edit_student_path(@student), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to students_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong>Registration</strong>
      <%= @student.registration %>
    </p>
  </div>
</div>
