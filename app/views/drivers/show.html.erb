<div class='page-header'>
  <h1>
    <%= t('Driver Info') %>
    <div class='pull-right'>
      <%= link_to edit_driver_path(@driver), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to drivers_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong>Cnh</strong>
      <%= @driver.cnh %>
    </p>
    <p>
      <strong>Category</strong>
      <%= @driver.category %>
    </p>
  </div>
</div>
