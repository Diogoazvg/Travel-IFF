<div class='page-header'>
  <h1>
    <%= t('Admin::travel Info') %>
    <div class='pull-right'>
      <%= link_to edit_admin_travel_path(@admin_travel), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to admin_travels_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong><%=t("Name")%></strong>
      <%= @admin_travel.name %>
    </p>
    <p>
      <strong><%=t("Description")%></strong>
      <%= @admin_travel.description %>
    </p>
    <p>
      <strong><%=t("Day")%></strong>
      <%= @admin_travel.day %>
    </p>
  </div>
</div>
