<div class='page-header'>
  <h1>
    <%= t('Admin::vehicle Info') %>
    <div class='pull-right'>
      <%= link_to edit_admin_vehicle_path(@admin_vehicle), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to admin_vehicles_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong>Seat</strong>
      <%= @admin_vehicle.seat %>
    </p>
    <p>
      <strong>Price</strong>
      <%= @admin_vehicle.price %>
    </p>
    <p>
      <strong>Order number</strong>
      <%= @admin_vehicle.order_number %>
    </p>
    <p>
      <strong>Travel</strong>
      <%= @admin_vehicle.travel %>
    </p>
    <p>
      <strong>Bus company</strong>
      <%= @admin_vehicle.bus_company %>
    </p>
  </div>
</div>
