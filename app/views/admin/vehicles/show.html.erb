<div class='page-header'>
  <h1>
    <%= t('Admin::vehicle Info') %>
    <div class='pull-right'>
      <%= link_to edit_admin_vehicle_path(@admin_vehicle), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to admin_vehicles_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong><%=t("Seat")%></strong>
      <%= @admin_vehicle.seat %>
    </p>
    <p>
      <strong><%=t("Price")%></strong>
      <%= @admin_vehicle.price %>
    </p>
    <p>
      <strong><%=t("OrderNumber")%></strong>
      <%= @admin_vehicle.order_number %>
    </p>
    <p>
      <strong><%=t("travel")%></strong>
      <%= @admin_vehicle.travel.name %>
    </p>
    <p>
      <strong><%=t("Bus company")%></strong>
      <%= @admin_vehicle.bus_company.name %>
    </p>
  </div>
</div>
